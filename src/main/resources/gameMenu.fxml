<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>

<BorderPane id="background" stylesheets="@/style.css">
    <center>
        <AnchorPane  xmlns:fx="http://javafx.com/fxml" maxHeight="275.0" maxWidth="325.0" prefHeight="325.0" prefWidth="325.0" BorderPane.alignment="CENTER">
            <children>
                <Button  layoutX="13.0" layoutY="221.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="MENU" onAction ="#pressBackToMainMenu"/>
                <Button  layoutX="13.0" layoutY="169.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="HELP" onAction ="#pressHelp"/>
                <Button  layoutX="13.0" layoutY="67.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="PLAYER VS. AI" onAction="#pressPlayAgainstComputer"/>
                <Button id="button" layoutX="13.0" layoutY="118.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="300.0" text="PLAY ONLINE" onAction ="#pressGoToLobby"/>
                <TextField fx:id="usernameField" layoutX="13.0" layoutY="14.0" prefHeight="40.0" prefWidth="235.0" promptText="Username" />
                <Label id="confirmation" fx:id="usernameConfirmation" layoutX="13.0" layoutY="277.0" prefHeight="17.0" prefWidth="300.0" />
                <Button layoutX="264.0" layoutY="14.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="50.0" text="OK" defaultButton="true" onAction ="#pressOKUsername"/>
            </children>
        </AnchorPane>
    </center>
</BorderPane>